doi = {doi: 10.1899/09-062.1},
file = {:home/leonardo/Mendeley/Journal of the North American Benthological Society/2011 - Lavoie, Lento, Morin - Inadequacy of size distributions of stream benthic diatoms for environmental monitoring.pdf:pdf},
issn = {0887-3593},
journal = {Journal of the North American Benthological Society},
keywords = {Folder - Periphyton},
