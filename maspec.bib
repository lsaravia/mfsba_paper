number = {1},
pages = {186--195},
title = {{The Analysis of Biodiversity Using Rank Abundance Distributions}},
url = {http://onlinelibrary.wiley.com/doi/10.1111/j.1541-0420.2009.01263.x/abstract},
volume = {66},
