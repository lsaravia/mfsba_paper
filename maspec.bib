doi = {10.1111/j.1600-0706.2011.20423.x},
file = {:home/leonardo/Mendeley/Oikos/2012 - Saravia, Giorgi, Momo - Multifractal growth in periphyton communities.pdf:pdf},
issn = {00301299},
journal = {Oikos},
month = jun,
number = {11},
pages = {1810--1820},
title = {{Multifractal growth in periphyton communities}},
url = {http://doi.wiley.com/10.1111/j.1600-0706.2011.20423.x},
volume = {121},
year = {2012}
}
