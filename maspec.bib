pages = {101--113},
title = {{Red-shifts and red herrings in geographical ecology}},
url = {http://onlinelibrary.wiley.com/doi/10.1111/j.1600-0587.2000.tb00265.x/abstract},
volume = {23},
year = {2000}
}
